<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <!-- Draw a 1dp width border around shape -->
            <stroke
                android:color="@color/colorScrollBg"
                android:width="2dp"
                />
        </shape>
    </item>
    <!-- Overlap the bottom border using background color  -->
    <item
        android:bottom="2dp"
        >
        <shape android:shape="rectangle">
            <solid android:color="@color/colorItemBg"/>
        </shape>
    </item>
</layer-list>